{
  "app": {
    "vitePath": "/ScratchCard_Gems-Web/",
    "gameName": "Flipping Cards - Gems",
    "fileExtensions": {
      "sounds": ".wav",
      "cardTypes": ".svg",
      "scratchMasks": ".png",
      "gameBackground": ".svg",
      "scratchCover": ".png",
      "spark": ".png",
      "tile_flipped": ".svg",
      "tile_hovered": ".svg",
      "tile_unflipped": ".svg",
      "winFrame": ".svg"
    }
  },
  "gameplay": {
    "gridRows": 3,
    "gridColumns": 3,
    "gameMode": "flip",
    "hover": {
      "enabled": true,
      "enterDuration": 120,
      "exitDuration": 200
    },
    "card": {
      "iconType": "static",
      "iconScale": 1,
      "iconOffsetX": 0,
      "offsetYv": -5,
      "spritesheetAnimationSpeed": 0.14,
      "matchShake": true
    },
    "scratch": {
      "revealRadius": 40,
      "coverFadeOutDuration": 200
    },
    "spritesheetProvider": {
      "columns": 3,
      "rows": 4,
      "cellWidth": 152,
      "cellHeight": 166,
      "horizontalGap": 4,
      "verticalGap": 8,
      "paddingLeft": 0,
      "paddingTop": 0,
      "paddingRight": 0,
      "paddingBottom": 0,
      "resolutionFactor": 0.75
    }
  }
}