{
  "app": {
    "vitePath": "/_Games/mine_crash/clients/dragons/",
    "gameName": "Flipping Cards - Dragons",
    "fileExtensions": {
      "sounds": ".wav",
      "cardTypes": ".svg",
      "scratchMasks": ".png",
      "gameBackground": ".svg",
      "scratchCover": ".png",
      "spark": ".png",
      "tile_flipped": ".svg",
      "tile_hovered": ".svg",
      "tile_unflipped": ".svg",
      "winFrame": ".svg"
    }
  },
  "gameplay": {
    "gridRows": 3,
    "gridColumns": 3,
    "gameMode": "flip",
    "hover": {
      "enabled": true,
      "enterDuration": 120,
      "exitDuration": 200
    },
    "card": {
      "iconType": "animated",
      "iconScale": 1.25,
      "iconOffsetX": 0,
      "offsetYv": -5,
      "spritesheetAnimationSpeed": 0.16,
      "matchShake": false
    },
    "scratch": {
      "revealRadius": 40,
      "coverFadeOutDuration": 200
    },
    "spritesheetProvider": {
      "columns": 3,
      "rows": 4,
      "cellWidth": 144,
      "cellHeight": 148,
      "horizontalGap": 5,
      "verticalGap": 21,
      "paddingLeft": 11,
      "paddingTop": 29,
      "paddingRight": 8,
      "paddingBottom": 0,
      "resolutionFactor": 0.75
    },
    "winPopup": {
      "useSprite": true,
      "spriteName": "winPopup",
      "scale": 0.6,
      "offsetX": 0,
      "offsetY": 0,
      "showDuration": 10000,
      "animationDuration": 300,
      "showText": true,
      "textOffsetX": 0,
      "textOffsetY": -80,
      "textColor": "#FFFFFF",
      "amountColor": "#EAFF00",
      "fontSize": 42,
      "amountFontSize": 38
  }
}
