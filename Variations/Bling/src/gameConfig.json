{
  "app": {
    "gameName": "Flipping Cards - Bling",
    "fileExtensions": {
      "sounds": ".wav",
      "cardTypes": ".png",
      "scratchMasks": ".png",
      "gameBackground": ".png",
      "gridBackground": ".png",
      "scratchCover": ".png",
      "spark": ".png",
      "tile_flipped": ".svg",
      "tile_hovered": ".png",
      "tile_unflipped": ".png",
      "winFrame": ".png"
    }
  },
  "gameplay": {
    "gameMode": "flip",
    "grid": {
      "rows": 3,
      "columns": 3,
      "scaleFactor": 1,
      "positionOffsetX": 0,
      "positionOffsetY": 0,
      "mobilePaddingX": 10,
      "mobilePaddingY": 0
    },
    "hover": {
      "enabled": true,
      "enterDuration": 120,
      "exitDuration": 200
    },
    "card": {
      "iconType": "static",
      "spritesheetType": "grid",
      "iconScale": 1,
      "iconOffsetX": 0,
      "iconOffsetY": -5,
      "spritesheetAnimationSpeed": 0.14,
      "matchShake": true,
      "winFrameScale": 1.1,
      "tileScaleFactorX": 1.0,
      "tileScaleFactorY": 1.0,
      "tilePaddingX": 1.0,
      "tilePaddingY": 1.0,
      "winFrameOffsetX": 0,
      "winFrameOffsetY": -5
    },
    "multipliersMapping": {
      "cardType_0": "2",
      "cardType_1": "10",
      "cardType_2": "2",
      "cardType_3": "10",
      "cardType_4": "2",
      "cardType_5": "10",
      "cardType_6": "2",
      "cardType_7": "10",
      "cardType_8": "2",
      "cardType_9": "10",
      "cardType_10": "Freeplay",
      "cardType_11": "50",
      "cardType_12": "1000",
      "cardType_13": "10000"
    },
    "scratch": {
      "revealRadius": 40,
      "coverFadeOutDuration": 200
    },
    "singleSpritesheetProvider": {
      "totalFrames": 12,
      "columns": 4,
      "rows": 3,
      "speed": 0.14
    },
    "gridSpritesheetProvider": {
      "columns": 3,
      "rows": 4,
      "cellWidth": 144,
      "cellHeight": 148,
      "horizontalGap": 5,
      "verticalGap": 21,
      "paddingLeft": 11,
      "paddingTop": 29,
      "paddingRight": 8,
      "paddingBottom": 0,
      "resolutionFactor": 0.75
    },
    "winPopup": {
      "useSprite": true,
      "spriteName": "winPopup",
      "scale": 0.6,
      "minScale": 0.15,
      "offsetX": 0,
      "offsetY": -60,
      "showDuration": 10000,
      "animationDuration": 300,
      "showText": true,
      "textOffsetX": 0,
      "textOffsetY": 100,
      "textLinesPadding": 0,
      "textColor": "#FFFFFF",
      "amountColor": "#EAFF00",
      "fontSize": 42,
      "amountFontSize": 38
    }
  }
}