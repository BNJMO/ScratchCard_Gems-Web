<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ScratchEngineManager.Views.GitCredentialsDialog"
        Title="Git Credentials"
        Width="520"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Background="#1C1F26">
    <Border Padding="20">
        <StackPanel Spacing="12">
            <TextBlock Text="Enter your Git username and personal access token to retry the update."
                       Foreground="#E6E8ED"
                       TextWrapping="Wrap"
                       FontSize="14"/>
            <TextBlock Text="For GitHub, generate a Personal Access Token with repo access."
                       Foreground="#AAB2C0"
                       TextWrapping="Wrap"
                       FontSize="12"/>
            <StackPanel Spacing="6">
                <TextBlock Text="Username"
                           Foreground="#E6E8ED"/>
                <TextBox Name="UserNameTextBox"
                         Background="#1C1F26"
                         Foreground="#E6E8ED"
                         BorderBrush="#3B414F"
                         CornerRadius="6"
                         Padding="8"/>
            </StackPanel>
            <StackPanel Spacing="6">
                <TextBlock Text="Personal Access Token"
                           Foreground="#E6E8ED"/>
                <TextBox Name="TokenTextBox"
                         PasswordChar="â€¢"
                         Background="#1C1F26"
                         Foreground="#E6E8ED"
                         BorderBrush="#3B414F"
                         CornerRadius="6"
                         Padding="8"/>
            </StackPanel>
            <TextBlock Name="ValidationText"
                       Text="Username and token are required."
                       Foreground="#E56A2C"
                       IsVisible="False"
                       TextWrapping="Wrap"
                       FontSize="12"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
                <Button Content="Cancel"
                        Width="100"
                        Click="OnCancelClick"
                        Background="#3B414F"
                        Foreground="#F7F8FA"
                        BorderBrush="#3B414F"
                        CornerRadius="6"
                        Padding="8,6"/>
                <Button Content="Confirm"
                        Width="100"
                        Click="OnConfirmClick"
                        Background="#E56A2C"
                        Foreground="#F7F8FA"
                        BorderBrush="#E56A2C"
                        CornerRadius="6"
                        Padding="8,6"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
