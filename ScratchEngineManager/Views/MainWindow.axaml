<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ScratchEngineManager.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ScratchEngineManager.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Scratch Engine Manager"
        Background="#1C1F26">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid ColumnDefinitions="1*,3*">
        <Border Background="#2A2F3A" Padding="16">
            <StackPanel Spacing="12">
                <TextBlock Text="Selected game variation:"
                           Foreground="#E6E8ED"
                           FontSize="14"
                           FontWeight="SemiBold"/>
                <ComboBox ItemsSource="{Binding VariationOptions}"
                          SelectedItem="{Binding SelectedVariation}"
                          Background="#1C1F26"
                          Foreground="#E6E8ED"
                          BorderBrush="#3B414F"
                          CornerRadius="6"
                          Padding="8"/>

                <Border Height="18"/>

                <TextBlock Text="Actions:"
                           Foreground="#E6E8ED"
                           FontSize="14"
                           FontWeight="SemiBold"/>
                <Button Content="Replace Assets"
                        Command="{Binding ReplaceAssetsCommand}"
                        Background="#3E8EDE"
                        Foreground="#F7F8FA"
                        BorderBrush="#3E8EDE"
                        CornerRadius="6"
                        Padding="10,6"/>
                <Button Content="Start Local Server"
                        Background="#3E8EDE"
                        Foreground="#F7F8FA"
                        BorderBrush="#3E8EDE"
                        CornerRadius="6"
                        Padding="10,6"/>
                <Button Content="Start Build"
                        Background="#3E8EDE"
                        Foreground="#F7F8FA"
                        BorderBrush="#3E8EDE"
                        CornerRadius="6"
                        Padding="10,6"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Background="#1C1F26" Padding="16">
            <TabControl Background="#1C1F26" BorderBrush="#3B414F">
                <TabItem Header="Log">
                    <Border Background="#20242C"
                            BorderBrush="#3B414F"
                            CornerRadius="6"
                            Padding="12">
                        <ScrollViewer>
                            <ItemsControl ItemsSource="{Binding LogEntries}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Message}"
                                                   Foreground="{Binding Foreground}"
                                                   FontFamily="Consolas"
                                                   FontSize="13"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </TabItem>
                <TabItem Header="Game Config">
                    <Border Background="#20242C"
                            BorderBrush="#3B414F"
                            CornerRadius="6"
                            Padding="12">
                        <ScrollViewer>
                            <StackPanel Spacing="6">
                                <TextBlock Text="{"
                                           Foreground="#A5ACB8"
                                           FontFamily="Consolas"/>
                                <ItemsControl ItemsSource="{Binding GameConfigFields}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Spacing="6">
                                                <TextBlock Text="{Binding Key}"
                                                           Foreground="#7CC0FF"
                                                           FontFamily="Consolas"/>
                                                <TextBlock Text=":"
                                                           Foreground="#A5ACB8"
                                                           FontFamily="Consolas"/>
                                                <TextBox Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         Background="#2A2F3A"
                                                         Foreground="#F2E68A"
                                                         BorderBrush="#3B414F"
                                                         CornerRadius="4"
                                                         Padding="6,4"
                                                         FontFamily="Consolas"
                                                         MinWidth="120"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <TextBlock Text="}"
                                           Foreground="#A5ACB8"
                                           FontFamily="Consolas"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </TabItem>
                <TabItem Header="Build Config">
                    <Border Background="#20242C"
                            BorderBrush="#3B414F"
                            CornerRadius="6"
                            Padding="12">
                        <ScrollViewer>
                            <StackPanel Spacing="6">
                                <TextBlock Text="{"
                                           Foreground="#A5ACB8"
                                           FontFamily="Consolas"/>
                                <ItemsControl ItemsSource="{Binding BuildConfigFields}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Spacing="6">
                                                <TextBlock Text="{Binding Key}"
                                                           Foreground="#7CC0FF"
                                                           FontFamily="Consolas"/>
                                                <TextBlock Text=":"
                                                           Foreground="#A5ACB8"
                                                           FontFamily="Consolas"/>
                                                <TextBox Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         Background="#2A2F3A"
                                                         Foreground="#F2E68A"
                                                         BorderBrush="#3B414F"
                                                         CornerRadius="4"
                                                         Padding="6,4"
                                                         FontFamily="Consolas"
                                                         MinWidth="120"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <TextBlock Text="}"
                                           Foreground="#A5ACB8"
                                           FontFamily="Consolas"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </TabItem>
            </TabControl>
        </Border>
    </Grid>

</Window>
