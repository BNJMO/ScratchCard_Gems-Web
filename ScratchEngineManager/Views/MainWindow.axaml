<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ScratchEngineManager.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ScratchEngineManager.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Scratch Engine Manager"
        Background="#1C1F26">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid ColumnDefinitions="1*,3*">
        <Border Background="#2A2F3A" Padding="16">
            <StackPanel Spacing="12">
                <TextBlock Text="Selected game variation:"
                           Foreground="#E6E8ED"
                           FontSize="14"
                           FontWeight="SemiBold"/>
                <ComboBox ItemsSource="{Binding VariationOptions}"
                          SelectedItem="{Binding SelectedVariation}"
                          Background="#1C1F26"
                          Foreground="#E6E8ED"
                          BorderBrush="#3B414F"
                          CornerRadius="6"
                          Padding="8"/>

                <Border Height="18"/>

                <TextBlock Text="Actions:"
                           Foreground="#E6E8ED"
                           FontSize="14"
                           FontWeight="SemiBold"/>
                <Button Content="Replace Assets"
                        Command="{Binding ReplaceAssetsCommand}"
                        Background="#3E8EDE"
                        Foreground="#F7F8FA"
                        BorderBrush="#3E8EDE"
                        CornerRadius="6"
                        Padding="10,6"/>
                <Button Content="{Binding LocalServerButtonLabel}"
                        Command="{Binding ToggleLocalServerCommand}"
                        Background="#3E8EDE"
                        Foreground="#F7F8FA"
                        BorderBrush="#3E8EDE"
                        CornerRadius="6"
                        Padding="10,6"/>
                <Button Content="Start Build"
                        Command="{Binding StartBuildCommand}"
                        Background="#3E8EDE"
                        Foreground="#F7F8FA"
                        BorderBrush="#3E8EDE"
                        CornerRadius="6"
                        Padding="10,6"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Background="#1C1F26" Padding="16">
            <TabControl Background="#1C1F26" BorderBrush="#3B414F">
                <TabItem Header="Log">
                    <Border Background="#20242C"
                            BorderBrush="#3B414F"
                            CornerRadius="6"
                            Padding="12">
                        <ScrollViewer x:Name="LogScrollViewer"
                                      HorizontalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding LogEntries}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Message}"
                                                   Foreground="{Binding Foreground}"
                                                   FontFamily="Consolas"
                                                   FontSize="13"
                                                   TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </TabItem>
                <TabItem Header="{Binding GameConfigTabHeader}">
                    <TabItem.KeyBindings>
                        <KeyBinding Gesture="Ctrl+S" Command="{Binding SaveGameConfigCommand}"/>
                        <KeyBinding Gesture="Cmd+S" Command="{Binding SaveGameConfigCommand}"/>
                    </TabItem.KeyBindings>
                    <TabItem.Styles>
                        <Style Selector="TextBox">
                            <Setter Property="KeyBindings">
                                <Setter.Value>
                                    <KeyBinding Gesture="Ctrl+S"
                                                Command="{Binding DataContext.SaveGameConfigCommand, RelativeSource={RelativeSource AncestorType=TabItem}}"/>
                                    <KeyBinding Gesture="Cmd+S"
                                                Command="{Binding DataContext.SaveGameConfigCommand, RelativeSource={RelativeSource AncestorType=TabItem}}"/>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TabItem.Styles>
                    <Border Background="#20242C"
                            BorderBrush="#3B414F"
                            CornerRadius="6"
                            Padding="12">
                        <Grid RowDefinitions="Auto,*">
                            <Button Content="Save"
                                    Command="{Binding SaveGameConfigCommand}"
                                    IsEnabled="{Binding IsGameConfigDirty}"
                                    HorizontalAlignment="Left"
                                    Background="#3E8EDE"
                                    Foreground="#F7F8FA"
                                    BorderBrush="#3E8EDE"
                                    CornerRadius="6"
                                    Padding="10,4"/>
                            <ScrollViewer Grid.Row="1">
                                <ItemsControl ItemsSource="{Binding GameConfigEntries}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#243447"
                                                    BorderBrush="#3B414F"
                                                    CornerRadius="6"
                                                    Padding="10"
                                                    Margin="{Binding ItemMargin}">
                                                <Grid ColumnDefinitions="2*,3*"
                                                      ColumnSpacing="12">
                                                    <ItemsControl ItemsSource="{Binding DisplaySegments}"
                                                                  VerticalAlignment="Center">
                                                        <ItemsControl.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <StackPanel Orientation="Horizontal"/>
                                                            </ItemsPanelTemplate>
                                                        </ItemsControl.ItemsPanel>
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding Text}"
                                                                           Foreground="{Binding Foreground}"
                                                                           FontFamily="Consolas"/>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                    <TextBox Grid.Column="1"
                                                             Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                             Background="#1B2B3D"
                                                             Foreground="#E6E8ED"
                                                             BorderBrush="#4B5A70"
                                                             CornerRadius="4"
                                                             Padding="6"
                                                             FontFamily="Consolas"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </TabItem>
                <TabItem Header="{Binding BuildConfigTabHeader}">
                    <TabItem.KeyBindings>
                        <KeyBinding Gesture="Ctrl+S" Command="{Binding SaveBuildConfigCommand}"/>
                        <KeyBinding Gesture="Cmd+S" Command="{Binding SaveBuildConfigCommand}"/>
                    </TabItem.KeyBindings>
                    <TabItem.Styles>
                        <Style Selector="TextBox">
                            <Setter Property="KeyBindings">
                                <Setter.Value>
                                    <KeyBinding Gesture="Ctrl+S"
                                                Command="{Binding DataContext.SaveBuildConfigCommand, RelativeSource={RelativeSource AncestorType=TabItem}}"/>
                                    <KeyBinding Gesture="Cmd+S"
                                                Command="{Binding DataContext.SaveBuildConfigCommand, RelativeSource={RelativeSource AncestorType=TabItem}}"/>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TabItem.Styles>
                    <Border Background="#20242C"
                            BorderBrush="#3B414F"
                            CornerRadius="6"
                            Padding="12">
                        <Grid RowDefinitions="Auto,*">
                            <Button Content="Save"
                                    Command="{Binding SaveBuildConfigCommand}"
                                    IsEnabled="{Binding IsBuildConfigDirty}"
                                    HorizontalAlignment="Left"
                                    Background="#3E8EDE"
                                    Foreground="#F7F8FA"
                                    BorderBrush="#3E8EDE"
                                    CornerRadius="6"
                                    Padding="10,4"/>
                            <ScrollViewer Grid.Row="1">
                                <ItemsControl ItemsSource="{Binding BuildConfigEntries}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#243447"
                                                    BorderBrush="#3B414F"
                                                    CornerRadius="6"
                                                    Padding="10"
                                                    Margin="{Binding ItemMargin}">
                                                <Grid ColumnDefinitions="2*,3*"
                                                      ColumnSpacing="12">
                                                    <ItemsControl ItemsSource="{Binding DisplaySegments}"
                                                                  VerticalAlignment="Center">
                                                        <ItemsControl.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <StackPanel Orientation="Horizontal"/>
                                                            </ItemsPanelTemplate>
                                                        </ItemsControl.ItemsPanel>
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding Text}"
                                                                           Foreground="{Binding Foreground}"
                                                                           FontFamily="Consolas"/>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                    <TextBox Grid.Column="1"
                                                             Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                             Background="#1B2B3D"
                                                             Foreground="#E6E8ED"
                                                             BorderBrush="#4B5A70"
                                                             CornerRadius="4"
                                                             Padding="6"
                                                             FontFamily="Consolas"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </TabItem>
            </TabControl>
        </Border>
    </Grid>

</Window>
