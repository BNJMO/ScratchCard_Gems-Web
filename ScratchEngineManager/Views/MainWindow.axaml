<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="ScratchEngineManager.Views.MainWindow"
        Title="ScratchEngineManager"
        Width="1100"
        Height="700">
  <Grid ColumnDefinitions="260,*" RowDefinitions="*" Margin="24">
    <Border Background="#112835" CornerRadius="12" Padding="16" Grid.Column="0">
      <StackPanel Spacing="12">
        <TextBlock Text="Selected game variation:" FontWeight="SemiBold" />
        <ComboBox ItemsSource="{Binding VariationOptions}" SelectedItem="{Binding SelectedVariation}" />
        <Border Height="20" Background="Transparent" />
        <TextBlock Text="Actions:" FontWeight="SemiBold" />
        <Button Content="Replace Assets" />
        <Button Content="Start Local Server" />
        <Button Content="Start Build" />
      </StackPanel>
    </Border>

    <Border Grid.Column="1" Margin="20,0,0,0" Background="#112835" CornerRadius="12" Padding="0">
      <TabControl>
        <TabItem Header="Log">
          <TextBox Text="{Binding LogText}" IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
        </TabItem>
        <TabItem Header="Game Config">
          <TextBox Text="{Binding GameConfigText}" IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
        </TabItem>
        <TabItem Header="Build Config">
          <TextBox Text="{Binding BuildConfigText}" IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
        </TabItem>
      </TabControl>
    </Border>
  </Grid>
</Window>
