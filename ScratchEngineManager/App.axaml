<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ScratchEngineManager.App">
  <Application.Styles>
    <FluentTheme />
    <Style Selector="Window">
      <Setter Property="Background" Value="#091B26" />
      <Setter Property="Foreground" Value="#D9E6EF" />
    </Style>
    <Style Selector="TextBlock">
      <Setter Property="Foreground" Value="#D9E6EF" />
      <Setter Property="FontSize" Value="14" />
    </Style>
    <Style Selector="ComboBox">
      <Setter Property="Background" Value="#091B26" />
      <Setter Property="Foreground" Value="#D9E6EF" />
      <Setter Property="BorderBrush" Value="#31566C" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="CornerRadius" Value="6" />
      <Setter Property="Padding" Value="8,6" />
    </Style>
    <Style Selector="Button">
      <Setter Property="Background" Value="#1C3748" />
      <Setter Property="Foreground" Value="#D9E6EF" />
      <Setter Property="BorderBrush" Value="#31566C" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="CornerRadius" Value="6" />
      <Setter Property="Padding" Value="10,8" />
    </Style>
    <Style Selector="Button:pointerover">
      <Setter Property="Background" Value="#285A78" />
    </Style>
    <Style Selector="TabControl">
      <Setter Property="Background" Value="#112835" />
      <Setter Property="Padding" Value="0" />
    </Style>
    <Style Selector="TabItem">
      <Setter Property="Background" Value="#112835" />
      <Setter Property="Foreground" Value="#A5C4D6" />
      <Setter Property="Padding" Value="12,8" />
    </Style>
    <Style Selector="TabItem:selected">
      <Setter Property="Foreground" Value="#EAFF00" />
      <Setter Property="Background" Value="#142733" />
    </Style>
    <Style Selector="TextBox">
      <Setter Property="Background" Value="#091B26" />
      <Setter Property="Foreground" Value="#D9E6EF" />
      <Setter Property="BorderBrush" Value="#223845" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="Padding" Value="12" />
    </Style>
  </Application.Styles>
</Application>
